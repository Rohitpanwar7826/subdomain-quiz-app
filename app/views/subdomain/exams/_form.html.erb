<%= turbo_frame_tag "quiz-question-#{quiz.id}" do %>
  <div class="container-fluid my-5">
    <%= form_with url: request_url, method: 'post' do |form| %>
      <div class="d-flex justify-content-center row" data-aos="fade-right">
        <div class="col-lg-11 p-2">
          <div class="border">
            <div class="question bg-white p-3 border-bottom">
              <div class="d-flex flex-row justify-content-between align-items-center mcq">
                <h4><%= quiz.title %></h4>
                <span>(5 of <%= quiz.total_questions %>)</span>
              </div>
            </div>
            <div class="question bg-white p-3 border-bottom mt-2">
              <div class="d-flex flex-row align-items-center question-title">
                <h3 class="text-danger">Q.</h3>
                <h5 class="mt-1 ml-2"><%= question.question %></h5>
              </div>
              <% question.options.each do |_, v| %>
                <div class="ans p-3 border-2 bg-dark text-light ml-2 mt-5">
                  <label class="radio">
                    <%= form.radio_button :answer, v %>
                    <span><%= v %></span>
                  </label>
                </div>
                <hr />
              <%end%>
            </div>
            <div class="d-flex flex-row justify-content-between align-items-center p-3 bg-white">
              <button class="btn btn-primary d-flex align-items-center btn-danger" type="button">
                <i class="fa fa-angle-left mt-1 mr-1"></i>&nbsp;previous
              </button>
              <%= form.submit 'Next', class: 'btn btn-primary border-success align-items-center btn-success', type: 'submit' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<%end%>